<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/lib/bootstrap/400/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/400/dist/js/bootstrap.js"></script>
    <style>
        html, body, #container {
            width: 100%;
            height: 100%;
            font-family: Arial,Geneva,sans-serif;
            font-size: 12px;
        }

        #header, #center, #footer {
            width: 100%;
        }

        #header {
            height: 51px;
            position: absolute;
            top: 0;
            left: 0;
        }

        #footer {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 35px;
            text-align: center;
            background: none repeat scroll 0 0 #FFFFFF;
            border-top: 1px solid #B8B8B8;
            font-weight: bold;
        }

        #center {
            position: absolute;
            bottom: 35px;
            top: 51px;
            border-color: #DBDBDB;
            border-image: none;
            border-style: solid;
            border-width: 1px 1px 0 0;
        }

        #silder, #content {
            height: 100%;
            overflow: auto;
        }

        #silder {
            width: 206px;
            float: left;
            border-right: 1px solid #b8b8b8;
            /*border-image:*/
        }

        #content {
            /*width:100%;
            padding-left:200px;*/
        }
    </style>
</head>
<body>
    <div id="container">
        <div id="header">
            <div style="height:100%;width:100%;background-color:red"></div>
        </div>
        <div id="center">
            <div id="silder"> <div style="height:100%;width:100%;background-color:blue"></div></div>
            <div id="content">
                <div style="height:100%;width:100%;background-color:green"></div>
            </div>
        </div>
        <div id="footer">
            <div style="height:100%;width:100%;background-color:aqua"></div>
        </div>
    </div>
</body>
</html>